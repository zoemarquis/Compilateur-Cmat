const int A = 1;

int somme_n_entiers(int a) {
  printf("dans fonction : a = ");
  print(a);
  printf("\n");
  int b = a;
  int c = a + 1;
  if (c <= A) {
    b = somme_n_entiers(c);
  } else {
    b = 0;
  }
  print(b);
